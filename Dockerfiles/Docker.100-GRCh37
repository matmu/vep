FROM ensemblorg/ensembl-vep:release_100.1

MAINTAINER Matthias Munz <matthias.munz@gmx.de>

RUN perl INSTALL.pl \
        --AUTO fcp \
        --ASSEMBLY GRCh37 \
        --PLUGINSDIR /opt/vep/.vep/Plugins/ \
        --CACHEDIR /opt/vep/.vep/ \
        --PLUGINS all \
        --SPECIES homo_sapiens_merged && \
    vep -id rs699 \
      --assembly GRCh37 \
      --port 3337 \
      --cache \
      --nearest symbol \
      -o 'STDOUT' \
      --merged \
      --no_stats \
      > /dev/null
